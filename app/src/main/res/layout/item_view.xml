<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageview"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/imageview"
        android:fontFamily="@font/circularstdbold"
        android:textColor="@color/medium_blue"
        tools:text="Title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/typeview"
        android:fontFamily="@font/circularstdmedium"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/titleview"
        tools:text="Event Type"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomview"
        android:fontFamily="@font/circularstdmedium"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/typeview"
        tools:text="Event Room"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startview"
        android:fontFamily="@font/circularstdmedium"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/roomview"
        tools:text="Start"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/durationview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/startview"
        tools:text="Duration"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/urlview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/durationview"
        tools:text="URL"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/languageview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/urlview"
        tools:text="Language"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/abstractview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/languageview"
        tools:text="Abstract"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personnameview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/abstractview"
        tools:text="Person Name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personbiographyview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/personnameview"
        tools:text="Person Biography"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateview"
        android:fontFamily="@font/circularstdbook"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/imageview"
        android:layout_below="@+id/personbiographyview"
        tools:text="Date"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/date"
        android:layout_marginTop="10dp"
        android:background="#DAD8D8"
        />

</RelativeLayout>